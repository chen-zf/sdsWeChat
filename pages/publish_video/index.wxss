/* pages/publish_video/publish_video.wxss */
.contrain{
  background-color: #fff;
}
.list{
  border-bottom: 1px solid #E7E7EA;
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  justify-content: space-between;
}
.list text{
  font-size: 28rpx;
  color: #333333;
}
.list input{
  width: 450rpx;
  font-size: 28rpx;
  color: #333333;
}
.list .right{
  width: 520rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .right-img{
  width: 520rpx;
}
.right-img image{
  width: 48rpx;
  height: 48rpx;
}
.list .right .up{
  font-size: 28rpx;
  color: #333333;
}

.list .right image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.list .upload{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #E6E6E6;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 60rpx;
}

.list .upload image{
  width: 95rpx;
  height: 95rpx;
}

.btn-view{
  margin-top: 100rpx;
}

.btn{
  width: 686rpx;
  height:76rpx;
  border-radius:10rpx;
  color: #FFFFFF;
  font-size: 40rpx;
  line-height: 76rpx;
  margin-bottom: 20rpx;
}

.shadow{
  width: 100%;
  height: 100%;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.5;
}

.window-block{
  width: 660rpx;
  position: fixed;
  top: 190rpx;
  left: 46rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  z-index: 99999;
}
.window-top{
    height: 174rpx;
    line-height: 174rpx;
    text-align: center;
    position: relative;
    background: linear-gradient(to left, #FF6833, #FF8432);
}
.window-top image{
  vertical-align: middle;
  width: 200rpx;
}
.window-top icon{
  position: absolute;
  top: -34rpx;
  right: 10rpx;
}
.window-main{
  box-sizing: border-box;
  padding: 80rpx 70rpx;
}
.font-main{
    font-size: 46rpx;
    color: #666666;
    padding-bottom: 40rpx;
}
.font-tip{
    font-size: 37rpx;
    color: #999999;
    padding-top: 40rpx;
}
.window-main button{
    width: 520rpx;
    height: 73rpx;
    line-height: 73rpx;
    font-size: 36rpx;
    color: #FF8132;
    background-color: #ffffff;
    border: 1px solid #FF8132;
    border-radius: 10rp;
    margin-top: 20rpx;
    outline: none;
}
.orange{
  background: rgba(255,150,80,1);
}

.green{
  background: rgba(9,187,7,1);
}
.red{
  background:rgba(255,116,51,1);
}
.label{
  color: #999999;
  font-size: 28rpx;
}
.label radio{
  transform:scale(0.7);
}
.hidden{
  display: none;
}