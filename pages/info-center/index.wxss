@import "../../template/template.wxss";
page{
 background: #fafafa;
}
.newTag{
  position:absolute;
  background:red;
  color:#fff;
  top:20rpx;
  right:0;
  padding:1rpx 12rpx;
  font-size:10px;
  border-radius:20rpx;
}
.container {
  height: 100%;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.info-top {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 32rpx;
  box-sizing: border-box;
  width: 686rpx;
  height: 168rpx;
  background: #fff;
  border-radius: 10rpx;
}
.info-top navigator{
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}
.info-top image {
  width: 100rpx;
  height: 100rpx;
}
.info-bottom{
   color: #999999;
   background: #fff;
}
.info-bottom navigator{
   display: flex;
   align-items: center;
   padding: 0 32rpx;
   box-sizing: border-box;
   width: 750rpx;
   height: 140rpx;
   border-bottom: 0.02rem solid #E7E7EA;
}
.info-bottom image{
  width: 96rpx;
  height: 96rpx;
} 
.info-nav-title{
  font-size:30rpx;
  font-weight: bold;
  font-family:PingFang-SC-Bold;
  color:rgba(102,102,102,1);
}
.info-nav-center{
  flex: 1;
  text-align: left;
  display: flex;
  flex-flow:  column nowrap;
  margin-left: 4rpx;
}