/* pages/announcement/index.wxss */
page{
 background: #f5f5f5;
}
.announcement-list{
  box-sizing: border-box;
  width: 750rpx;
  padding: 0 32rpx;
}
.announcement-item{
  display: flex;
  flex-flow: column nowrap;
  margin-top: 40rpx;
  font-size:30rpx;
font-family:PingFang-SC-Medium;
color:rgba(102,102,102,1);
  text-align: justify;
}
.announcement-item-bottom{
  display: flex;
  margin-top: 20rpx;
}
.announcement-time{
  align-self: center;
  width:240rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  background:rgba(230,230,230,1);
  border-radius:4rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Bold;
  color:rgba(153,153,153,1);
}
.announcement-image{
  width: 86rpx;
  height: 86rpx;
  background: red;
  border-radius: 100%;
}

.announcement-content{
    position: relative;
    display: flex;
    flex-flow: column nowrap;
    box-sizing: border-box;
    flex-basis: 520rpx;
    padding: 30rpx 20rpx;
    margin-left: 30rpx;
    width: 520rpx;
    background: #ffffff;
    border-radius: 10rpx;
    letter-spacing: 1rpx;
}
.more{
  margin-top: 20rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(153,153,153,1);  
}
.triangle{
    position: absolute;
    left: -20rpx;
    border: 12rpx solid #fff;
    border-top-color: transparent;
    border-left-color: transparent;
    border-bottom-color: transparent;
}