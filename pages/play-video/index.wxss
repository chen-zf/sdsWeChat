@import "../../template/template.wxss";
.top-main{
  position: relative;
  height: 556rpx;
  overflow: hidden;
}
.top_bg{
  width: 750rpx;
}
.top-main .guanzhu-active {
  background: rgb(153, 153, 153);
}
.top-main .follow{
  height: 80rpx;
  background: rgba(0,0,0,0.4);
  border-radius:0px 40rpx 40rpx 0px;
  position: absolute;
  top: 16rpx;
  left: 0;
  display: flex;
  align-items: center;
}
.top-main .follow .head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  margin-left: 20rpx;
}

.top-main .follow .head image{
  width: 80rpx;
}

.top-main .title{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color:rgba(255,255,255,1);
}

.top-main button{
  height: 72rpx;
  color: #ffffff;
  background:linear-gradient(180deg,rgba(255,104,51,1),rgba(255,132,50,1));
  border-radius:36rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.sum{
  padding: 0 20rpx 0 30rpx;
  height: 60rpx;
  background: rgba(0,0,0,0.4);
  border-radius:0px 40rpx 40rpx 0px;
  position: absolute;
  top: 112rpx;
  left: 0;
  color: #ffffff;
  font-size: 24rpx;
  text-align: right;
  line-height: 60rpx;
  padding-right: 16rpx;
  box-sizing: border-box;
}
.listbox-video {
position:relative;
top:0;
width:750rpx;
height:556rpx;
border-radius:10rpx;

}

.close{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;

}

.top-main .left{
  position: absolute;
  left: 22rpx;
  bottom: 14rpx;
  display: flex;

}
.left .leftItem{
  display: flex;
  flex-direction: column;
  color:#ffffff;
  font-size: 24rpx;
  text-align: center;
}
.left .leftItem image{
  width: 100rpx;
  height: 100rpx;
}

.top-main .right{
  position: absolute;
  right: 22rpx;
  bottom: 14rpx;
  display: flex;

}
.right .rightItem{
  display: flex;
  flex-direction: column;
  color:#ffffff;
  font-size: 24rpx;
  text-align: center;
}
.right .rightItem image{
  width: 100rpx;
  height: 100rpx;
}
.title-main{
  padding: 20rpx 0 40rpx 0;
  border-bottom: 1px solid #CCCCCC;
}
.title-top{
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
}
.title-top text{
  color: #333333;
  font-size:40rpx;
  font-weight: bold;
}
.title-top view{
  width: 100rpx;
  height: 44rpx;
  border-radius:10rpx;
  color: #FF8432;
  font-size:24rpx;
  border: 1px solid #FF8432;
  text-align: center;
  line-height: 44rpx;
}
.title-main .content{
  font-size:30rpx;
  color:rgba(102,102,102,1);
  margin-top: 20rpx;
  padding: 0 32rpx;
}
.hotlists-box{
  padding:20rpx 0 66rpx 0;
}
.comment-box {
  background:#ffffff;
}
