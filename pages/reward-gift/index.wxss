/* pages/reward-gift/index.wxss */

.gift-box {
  display: flex;
  justify-content: space-around;
  flex-flow: row wrap;
  padding: 40rpx 32rpx;
}

.gift-items-box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
}

.gift-items {
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 210rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.gift-items-box:nth-child(1)>.gift-items {
  background: linear-gradient(to bottom, #ff9f68, #ff9355);
}

.gift-items-box:nth-child(2)>.gift-items {
  background: linear-gradient(to bottom, #ad89ff, #9f75ff);
}

.gift-items-box:nth-child(3)>.gift-items {
  background: linear-gradient(to bottom, #7dbfff, #5daefd);
}

.gift-items-box:nth-child(4)>.gift-items {
  background: linear-gradient(to bottom, #f99, #ff7d7d);
}

.gift-items-box:nth-child(5)>.gift-items {
  background: linear-gradient(to bottom, #ffbd6b, #feb04e);
}

.gift-items-box:nth-child(6)>.gift-items {
  background: linear-gradient(to bottom, #ffa171, #ff9159);
}
.gift-active{
    position: absolute;
    top: 0;
    right: 0;
    width: 210rpx;
    height: 150rpx;
    background: rgba(0, 0, 0, 0.15);
}
.gift-img {
  align-self: center;
  width: 130rpx;
  height: 88rpx;
}

.gift-name {
  margin-top: 10rpx;
  color: rgba(51, 51, 51, 1);
}
.gift-btn {
  width: 686rpx;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  background-color: #ff7732;
  border: 0;
  border-radius: 10rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Medium;
  color: #fff;
  margin: 34rpx 32rpx;
}