/* pages/redact/index.wxss */
page{
  background: #fafafa;
}
.redact-ul{
    width: 750rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    color: #333;
}
.redact-input{
  align-self: center;
  width: 100%;
  height:100rpx;

  margin-right: 20rpx;
}
.picker{
  width: 100rpx;
    height: 90rpx;
    background-color: red;
}
.redact-li{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 32rpx;
    background: #ffffff;
    border-bottom: 2rpx solid #E7E7EA;
}
.redact-li:first-child{
   border-top: 2rpx solid #E7E7EA;
}
.redact-head{
  height: 160rpx;
  line-height: 160rpx;
}
.redact-head>image{
  align-self: center;
  width: 120rpx;
  height: 120rpx;
}
.redact-ul:nth-last-child(1){
  margin-bottom: 40rpx;
}
.li-text{
  flex-basis: 166rpx;
  width: 166rpx;
}
.li-main{
  flex: 1;
}
.redact-go-icon{
  align-self: center;
  width: 20rpx;
  height: 34rpx;
}
