/* pages/exchange/index.wxss */

page {
  background: rgba(250, 250, 250, 1);
}

.exchange-box {
  display: flex;
  width: 750rpx;
  height: 180rpx;
  padding: 26rpx 32rpx;
  background: rgba(255, 255, 255, 1);
  border-bottom: 1rpx solid rgba(231, 231, 234, 1);
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
}

.exchange-box image {
  width: 180rpx;
  height: 128rpx;
}

.exchange-box-r {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  margin-left: 20rpx;
}

.right-bottom-box {
  display: flex;
  justify-content: space-between;
}

.exchange-box-r .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  font-weight: bold;
  font-family: PingFang-SC-Bold;
  color: #666;
  text-align: justify;
}

.exchange-box-r .points {
  color: rgba(255, 132, 50, 1);
}
