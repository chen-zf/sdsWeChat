/* pages/comment-all/index.wxss */
page{
  height: 100%;
  background:rgba(250,250,250,1);
}

.comment-box{
  display: flex;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}
.user-head{
  flex-basis: 80rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background: rgba(255,119,50,1);
}
.box-r{
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  margin-left: 10rpx;
}
.boxA{
  padding: 40rpx 32rpx 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 1px 0px 0px rgba(231,231,234,1);
}
.boxB{
  margin: 0 32rpx;
  padding: 20rpx 0 40rpx;
}
.box-r-top{
  margin-bottom: 10rpx;
}
.comment-name{
  flex: 1;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.comment-time{
   margin-bottom: 20rpx;
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.comment-content{
  padding-bottom: 40rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.comment-icon{
 align-self: flex-end;
 width: 40rpx;
 height: 40rpx;
}
.box-r-top{
  display: flex;
}
.like-box{
  display: flex;
}
.like-number{
  margin-left: 20rpx;
  align-self: flex-end;
  font-size:24rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(207,64,33,1);
}
.pl-icon{
  margin-left: 60rpx;
}
.pl-sort-box{
  display: flex;
  justify-content: flex-end;
}
.pl-sort-icon{
  width: 32rpx;
  height: 32rpx;
}
.pl-sort-text{
  margin-left: 6rpx;
  font-size:24rpx;
  color:rgba(37,86,142,1);
}
.reply-box{
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  width:750rpx;
  height:90rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  background:rgba(255,255,255,1);
  box-shadow:0px -1px 0px 0px rgba(231,231,234,1);
}
.reply-input-box{
  display: flex;
  align-self: center;
  width:686rpx;
  height:60rpx;
  /* background:rgba(245,245,245,1); */
  border:2rpx solid rgba(230,230,230,1);
}
.reply-input{
  width:518rpx;
  height:60rpx;
  margin: 0 24rpx 20rpx;
  box-sizing: border-box;
  /* background:rgba(245,245,245,1); */
  border-radius:6rpx;
}
.reply-btn{
  width: 120rpx;
  align-self: center;
  text-align: center;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(255,93,36,1);
  border-left: 2px solid rgba(230,230,230,1);
}
.border-bottom-solid{
  border-bottom: 1rpx solid rgba(204,204,204,1);
}
.margin-bottom98{
  margin-bottom: 90rpx;
}
