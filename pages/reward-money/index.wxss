/* pages/reward-money/index.wxss */

.reward-box {
  display: flex;
  flex-flow: row wrap;
  width: 686rpx;
  padding: 40rpx 32rpx;
  justify-content: space-around;
}

.reward-item {
  display: flex;
  align-self: center;
  margin-bottom: 20rpx;
  width: 210rpx;
  height: 150rpx;
  border: 2rpx solid rgba(255, 164, 47, 1);
  border-radius: 10rpx;
  font-size: 48rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 164, 47, 1);
  text-align: center;
}
.reward-text{
  width: 210rpx;
  align-self: center;
}

.reward-btn {
  width: 686rpx;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  background-color: #ff7732;
  border: 0;
  border-radius: 10rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Medium;
  color: #fff;
  margin: 34rpx 32rpx;
}
.reward-active{
  color:rgba(255,255,255,1);
  background:rgba(255,119,50,1);
}
