<!-- 底部菜单栏 -->
<template name="tabbarTemp">
  <cover-view class='tabbar-box'>
    <cover-view class="{{navActive[0]==1?'active':''}}" data-pagesNo="0" bindtap='tabbarReLaunchFunc'>
      <cover-image src="{{navActive[0]==1?'../../image/tabbar/index-hl@2x.png':'../../image/tabbar/index@2x.png'}}"></cover-image>
      <cover-view>首页</cover-view>
    </cover-view>
    <cover-view class="{{navActive[1]==1?'active':''}}" data-pagesNo="1" bindtap='tabbarReLaunchFunc'>
      <cover-image src="{{navActive[1]==1?'../../image/tabbar/attention-hl@2x.png':'../../image/tabbar/attention@2x.png'}}"></cover-image>
      <cover-view>关注</cover-view>
    </cover-view>
    <cover-view class="issue-box {{navActive[2]==1?'active':''}}" data-pagesNo="2" bindtap='tabbarReLaunchFunc'>
      <cover-image class='issue-img' src="{{navActive[2]==1?'../../image/tabbar/issue-hl@2x.png':'../../image/tabbar/issue@2x.png'}}"></cover-image>
       <cover-view>发布</cover-view>
    </cover-view>
    <cover-view class="{{navActive[3]==1?'active':''}}" data-pagesNo="3" bindtap='tabbarReLaunchFunc'>
      <cover-image src="{{navActive[3]==1?'../../image/tabbar/news-hl@2x.png':'../../image/tabbar/news@2x.png'}}"></cover-image>
      <cover-view>消息</cover-view>
    </cover-view>
    <cover-view class="{{navActive[4]==1?'active':''}}" data-pagesNo="4" bindtap='tabbarReLaunchFunc'>
      <cover-image src="{{navActive[4]==1?'../../image/tabbar/my-hl@2x.png':'../../image/tabbar/my@2x.png'}}"></cover-image>
      <cover-view>我的</cover-view>
    </cover-view>
  </cover-view>
  <cover-view class='position-issueimg' data-pagesNo="2" bindtap='tabbarReLaunchFunc'><cover-image  src="../../image/tabbar/issue@2x.png"></cover-image></cover-view>
</template>

