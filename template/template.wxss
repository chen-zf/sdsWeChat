/* 底部菜单栏样式 */
.position-issueimg{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  margin:0px auto;
  width: 108rpx;
  height: 108rpx;
  /* z-index: 999999; */
}
.tabbar-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 98rpx;
  background: #fff;
  -webkit-box-shadow: 1rpx 0 6rpx #e1e1e1;
  box-shadow: 1rpx 0 6rpx #e1e1e1;
  border-top: 1rpx solid #f2f2f2;
  font-size: 20rpx;
  color: rgba(51, 51, 51, 1);
  font-family: PingFang-SC-Medium;
  /* z-index: 999990; */
}
.tabbar-box .active {
  color: rgba(233, 96, 52, 1);
}

.tabbar-box view {
  flex: 1;
  text-align: center;
  display: flex;
  flex-flow: column nowrap;
}

.tabbar-box image {
  align-self: center;
  width: 42rpx;
  height: 42rpx;
}

.tabbar-box .issue-box {
  position: relative;
  top:-32rpx;
  font-size: 20rpx;
  text-align: center;
}

.issue-box .issue-img {
  width: 108rpx;
  height: 108rpx;
}

/* 关注页面列表 */

.attention-listbox {
  margin-top: 10rpx;
  padding: 20rpx 32rpx 30rpx;
  width: 750rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
}

.listbox-top {
  display: flex;
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(51, 51, 51, 1);
}

.my-buddha {
  flex-basis: 60rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  margin-right: 10rpx;
}

.listbox-top-r {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
}

.listbox-topname {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
}

.listbox-toptime {
  font-size: 20rpx;
  font-family: Helvetica;
  color: rgba(51, 51, 51, 1);
}

.listbox-middle {
  margin-top: 10rpx;
  position: relative;
}

.listbox-video {
  position: relative;
  top: 0;
  width: 686rpx;
  height: 356rpx;
  border-radius: 10rpx;
  /* z-index: 10001 !important; */
}
.model-btn{
	  position:absolute;
    left:0;
    top:0;
    bottom:0;
    right:0;
    margin:auto;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    background-color: rgba(0,0,0,.3);
    /* z-index: 10004; */
}
.play-icon{
    margin:28rpx 40rpx;
    border-top:26rpx solid transparent;
    border-left:36rpx solid #fff;
    border-bottom:22rpx solid transparent;
}
.listbox-masklayer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 686rpx;
  height: 356rpx;
  background: rgba(0, 0, 0, 1);
  opacity: 0.2;
  border-radius: 10rpx;
   /* z-index: 10002; */
}
.video-status{
  display: flex;
  justify-content: flex-end;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(153,153,153,1);
}
.video-status>view{
  display: flex;
  margin-right: 40rpx;
}
.video-status image{
  align-self: center;
  width: 44rpx;
  height: 44rpx;
}
.video-status text{
  align-self: center;
}
.listbox-bottom{
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 20rpx 10rpx 10rpx;
  width:686rpx;
  background:rgba(242,242,242,1);
  border-radius:10rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(51,51,51,1);
}
.listbox-color{
  color:rgba(75,141,226,1);
}
.listbox-bottom>view{
  margin-bottom: 10rpx; 
}

